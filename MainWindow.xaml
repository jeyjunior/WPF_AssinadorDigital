<Window
    x:Class="GerenciadorCertificados.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GerenciadorCertificados"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    Loaded="Window_Loaded"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="107*" />
            <ColumnDefinition Width="190*" />
            <ColumnDefinition Width="503*" />
        </Grid.ColumnDefinitions>
        <Button
            x:Name="btnAdicionarCertificado"
            Grid.ColumnSpan="2"
            Width="159"
            Height="54"
            Margin="82,0,0,30"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Click="btnAdicionarCertificado_Click"
            Content="Adicionar Certificado" />
        <Grid
            Grid.ColumnSpan="3"
            Margin="81,62,81,108"
            Background="#FFDEDEDE"
            ShowGridLines="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*" />
            </Grid.RowDefinitions>
        </Grid>
        <Button
            x:Name="btnObterCertificado"
            Grid.Column="2"
            Width="159"
            Height="54"
            Margin="0,0,0,30"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Click="btnObterCertificado_Click"
            Content="Obter Certificado" />
        <Button
            x:Name="btnObterCertificadoInstalado"
            Grid.Column="2"
            Width="159"
            Height="54"
            Margin="197,0,0,30"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Click="btnObterCertificadoInstalado_Click"
            Content="Obter Certificado Instalado" />

    </Grid>
</Window>
